{
    "name": "texture-reader",
    "license": "MIT",
    "version": "2.0.0",
    "type": "module",
    "scripts": {
        "start": "vite --open",
        "build": "tsc && vite build && rm -rf dist/test",
        "build:development": "tsc && vite build --mode development && rm -rf dist/test",
        "test": "vitest",
        "test:coverage": "vitest --coverage",
        "prepare": "husky"
    },
    "devDependencies": {
        "@types/jsdom": "21.1.7",
        "@vitest/coverage-v8": "3.2.4",
        "husky": "9.1.7",
        "jsdom": "26.1.0",
        "lint-staged": "16.1.2",
        "prettier": "3.6.2",
        "terser": "5.43.1",
        "typescript": "5.8.3",
        "vite": "6.2.3",
        "vite-plugin-singlefile": "2.2.0",
        "vitest": "3.2.4"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*.{ts,template.html,json,css,md}": [
            "prettier --write"
        ]
    }
}
